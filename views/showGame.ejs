<% include header %>

<p>salut on regarde la game,
    <span id="j1"><%= j1 %></span> doit faire deviner le mot à
    <span id="j2"><%= j2 %></span></p>

<ul class="players">
    <% for (var i = 0;i < players.length;i++){ %>
        <li> <%= players[i]["name"] %> : <%= players[i]["score"] %> </li>
    <% } %>
</ul>

<ul class="history">
    <% for (var i = 0;i < history.length;i++){ %>
        <% for (var j = 0; j < players.length; j++) {
            if (history[i]["p1"] == players[j]["id"]) {
                history[i]["j1"] = players[j]["name"]
            }
            if (history[i]["p2"] == players[j]["id"]) {
                history[i]["j2"] = players[j]["name"]
            }
        } %>
        <% if (history[i]["isSuccess"] == 1){ %>
            <li> <%= history[i]["j1"] %> a reussi a faire deviner le mot <%= history[i]["actualword"] %>
                à <%= history[i]["j2"] %></li>
        <% } else{ %>
            <li> <%= history[i]["j1"] %> n'a pas reussi a faire deviner le mot <%= history[i]["actualword"] %>
                à <%= history[i]["j2"] %></li>

        <% } %>
    <% } %>
</ul>



<input type="hidden" id="id_game" value="<%= game["id"] %>">


<% include footer_show %>


